<%- include("header") -%>
<!-- //include("file.ejs") is a EJS layout -->

<body>
  <a href="/about">About Page</a>
  <!-- route to about.ejs page. see server file to see how it handles the routing -->
  <div class="box" id="heading">
    <h1><%= listTitle %>!</h1>
  </div>

  <div class="box">
    <%  for (var i=0; i < newTodoItems.length; i++) { %>
    <div class="item">
      <input type="checkbox" />
      <p> <%= newTodoItems[i] %> </p>
    </div>
    <% } %>

    <form class="item" action="/" method="POST">
      <input id="itemTextField" type="text" name=itemTextField placeholder="New To-do Item" autocomplete="off"/>
      <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </div>


  </form>

  <!-- the EJS marker contains an EJS variable. It may contain values or objects sent from the server %> %> %> -->
</body>
<%- include("footer") -%>
